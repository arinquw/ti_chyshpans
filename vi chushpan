from telegram import Update, ReplyKeyboardMarkup
from telegram.ext import ApplicationBuilder, CommandHandler, MessageHandler, filters, ContextTypes

# –ö–æ–º–∞–Ω–¥–∞ /start
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    keyboard = [["–ø—Ä–∏—à–∏—Ç—å—Å—è —Ö–æ—á—É üëã", "–Ω–µ–º–æ—â—å —Ç—ã ‚ùì"], ["–∑–∞ –µ—Ä–æ–ª–æ—â–∞!!!!!!! üòÑ", "–ü–æ–∫–µ–¥–∞ —á—É—à–ø–∞–Ω—ã üëã"]]
    reply_markup = ReplyKeyboardMarkup(keyboard, resize_keyboard=True)
    await update.message.reply_text(
        "–ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç —Å–ª–æ–≤–æ –ø–∞—Ü–∞–Ω–∞. –í—ã–±–µ—Ä–∏—Ä–∞–π —á—É—à–ø–∞–Ω:", reply_markup=reply_markup
    )

# –û—Ç–≤–µ—Ç –Ω–∞ —Ç–µ–∫—Å—Ç–æ–≤—ã–µ —Å–æ–æ–±—â–µ–Ω–∏—è
async def handle_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
    text = update.message.text.lower()

    if "–ø—Ä–∏—à–∏—Ç—å—Å—è —Ö–æ—á—É" in text:
        await update.message.reply_text("–ø–∞—Ü–∞–Ω—ã –Ω–µ –∑–¥–æ—Ä–æ–≤–∞—é—Ç—Å—è üòé")
    elif "–ø–æ–º–æ—â—å" in text:
        await update.message.reply_text("–í–æ—Ç —á–µ —è —É–º–µ—é:\n-  –ø—Ä–∏—à–∏—Ç—å—Å—è —Ö–æ—á—Éüëã\n- –∑–∞ –µ—Ä–æ–ª–æ—â–∞!!!!!!! üòÑ\n- –ü–æ–∫–µ–¥–∞ —á—É—à–ø–∞–Ω—ã üëã")
    elif "–∑–∞ –µ—Ä–æ–ª–æ—â–∞!!!!!!!" in text:
        await update.message.reply_text("üòÜ –¥–∞–≤–∞–π—Ç–µ –ø–∞—Ü–∞–Ω—ã —Å–ª–æ–≤–æ –¥–∞–¥–∏–º, —á—Ç–æ –µ—Ä–æ–ª–∞—â–∞ –Ω–µ –∑–∞–±—É–¥–µ–º!!!!!")
    elif "–ü–æ–∫–µ–¥–∞ —á—É—à–ø–∞–Ω—ã" in text:
        await update.message.reply_text("—Ä–∞–∑—ä–µ–∑–¥ —á—É—à–ø–∞–Ω—ã")
    else:
        await update.message.reply_text("–ø–æ –ø–∞—Ü–∞–Ω—Å–∫–∏ –±–∞–∑–∞—Ä—å ü§î")

# –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –∑–∞–ø—É—Å–∫–∞ –±–æ—Ç–∞
def main():
    TOKEN = "8516594619:AAGcaSYSdXA2Jsqtf_ukRokKXv9sWdT8y_M"

    app = ApplicationBuilder().token(TOKEN).build()

    # –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏
    app.add_handler(CommandHandler("start", start))
    app.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, handle_message))

    print("–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω...")
    app.run_polling()

if __name__ == "__main__":
    main()
